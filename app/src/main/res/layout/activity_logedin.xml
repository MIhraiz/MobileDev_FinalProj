<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#353333"
    tools:context=".Logedin">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Android Academy"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:transformPivotY="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_below="@id/textView2"
        tools:layout_centerVertical="true">

        <Button
            android:id="@+id/btnList"
            android:layout_width="180dp"
            android:layout_height="94dp"
            android:backgroundTint="#4CAF50"
            android:onClick="onClick_CourseListbtn"
            android:text="Courses List"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="180dp"
            android:layout_height="94dp"
            android:backgroundTint="#4CAF50"
            android:onClick="onClick_UpdateFormbtn"
            android:text="Update"
            android:textSize="18sp" />

    </LinearLayout>




</RelativeLayout>