<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2feff "
    android:backgroundTint="#f2feff "
    android:foregroundTint="#f2feff "
    tools:context=".UpdateForm">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:fontFamily="casual"
        android:text="Android Shopping"
        android:textAlignment="center"
        android:textColor="#00a3b6"
        android:textColorHighlight="#050505"
        android:textColorLink="#00a3b6"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <EditText
        android:id="@+id/edtUpEmail"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#00a3b6"
        android:drawableTint="#4CAF50"
        android:ems="10"
        android:foregroundTint="#4CAF50"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#00a3b6"
        android:textColorHint="#00a3b6"
        app:layout_constraintBottom_toTopOf="@+id/edtUpPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtUpName"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#00a3b6"
        android:drawableTint="#00a3b6"
        android:ems="10"
        android:foregroundTint="#4CAF50"
        android:hint="Name"
        android:textColor="#00a3b6"
        android:textColorHint="#00a3b6"
        app:layout_constraintBottom_toTopOf="@+id/edtUpEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reg2"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:backgroundTint="#00a3b6"
        android:drawableTint="#00a3b6"
        android:fontFamily="casual"
        android:onClick="btnOnClick_Update"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.754"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <EditText
        android:id="@+id/edtUpPass"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_marginBottom="400dp"
        android:backgroundTint="#00a3b6"
        android:drawableTint="#4CAF50"
        android:ems="10"
        android:foregroundTint="#4CAF50"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#00a3b6"
        android:textColorHint="#00a3b6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintVertical_bias="0.061" />
</androidx.constraintlayout.widget.ConstraintLayout>